<div class="card-list-containar py-5">
  <% post_images.each do |f| %>  <!--３番--><!--それぞれの投稿データ-->
  <div class="card w-50 mx-auto mt-4 shadow-lg">

  	<!--1番-->
    <%= link_to post_image_path(f.id) do %>
      <%= attachment_image_tag f, :image, class:"card-img-top"; %>
    <% end %>
   <!--1番--><!--投稿画像-->
    <div class="card-body">
      <div class="row">

        <div class="col-2">
          <%= attachment_image_tag f.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
        </div>

        <div class="col-10">
          <p class="card-title">
    <!--2番--><!--旗付きのタイトル-->
            <%= link_to(post_image_path(f.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= f.shop_name %></span></strong>
            <% end %>
    <!--2番-->
          </p>
          <p class="card-text">説明：<%= f.caption %></p>
          <span><i class="fas fa-user"></i> By <%= f.user.name %> ｜ </span>
          <span><%= link_to "#{f.post_comments.count} コメント", post_image_path(f.id), class:"text-dark" %></span>
        </div> <!--col-10-->

      </div><!--row-->
    </div><!--card-body-->
  </div>
  <% end %>  <!--３番-->
  <%= paginate post_images %>
</div>